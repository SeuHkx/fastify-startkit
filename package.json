{
	"scripts": {
		"copy:config": "cpx 'src/config/**/*' dist/config/",
		"dev:ts": "concurrently \"cross-env NODE_ENV=development tsc -w\"  \"ts-node-dev src/server.ts | pino-pretty --colorize\"",
		"dev:js": "concurrently \"tsc -w\" \"cross-env NODE_ENV=development pnpm build:ts && nodemon dist/server.js\"",
		"build:ts": "tsc -p tsconfig.json && pnpm copy:config",
		"webpack": "concurrently \"cross-env NODE_ENV=production pnpm build:ts\" \"webpack --config webpack.config.ts\""
	},
