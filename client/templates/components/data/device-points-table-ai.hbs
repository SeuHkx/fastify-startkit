{{!-- 设备AI点位配置表格 --}}
<div class="tabs-box" x-show="activeTab === 'AI'">
    <div style="display: flex; gap: 0.5rem; align-items: center;justify-content: flex-end;margin-bottom: 10px;">
        <button type="button" class="is-link button" @click="addPoint('AI')">
            添加
        </button>
        <button type="button" 
                class="button" 
                @click="deleteSelectedPoints('AI')"
                :disabled="selectedPointsAI.length === 0">
            删除
        </button>
    </div>
    <table class="points-table">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" 
                          @change="toggleAllPoints('AI', $event)" 
                          :checked="isAllPointsSelectedAI">
                </th>
                <th>序号</th>
                <th>点位类型</th>
                <th>code</th>
                <th>状态反馈</th>
                <th>值</th>
                <th>通道</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <template x-for="(point, index) in (Array.isArray(pointsAI) ? pointsAI : [])" :key="point._key ? point._key : (point.id ? point.id : (point.type + '-' + index))">
                <tr>
                    <td>
                        <input type="checkbox" 
                              :value="point.id" 
                              x-model="selectedPointsAI"
                              :disabled="point.isFromTemplate">
                    </td>
                    <td x-text="index + 1"></td>
                    <td>
                        <input class="input" 
                              type="text" 
                              x-model="point.type" 
                              disabled
                              />
                    </td>
                    <td>
                        <input class="input" 
                              type="text" 
                              x-model="point.code" 
                              placeholder="请输入"
                              :disabled="point.isFromTemplate" 
                              :readonly="point.isFromTemplate">
                    </td>
                    <td>
                        <input class="input" 
                              type="text" 
                              x-model="point.statusFeedback" 
                              placeholder="请输入"
                              :disabled="point.isFromTemplate" 
                              :readonly="point.isFromTemplate">
                    </td>
                    <td>
                        <input class="input" 
                              type="number" 
                              x-model.number="point.value" 
                              placeholder="0"
                              style="width: 80px;"
                              :disabled="point.isFromTemplate" 
                              :readonly="point.isFromTemplate">
                    </td>
                    <td>
                        <div class="select">
                            <select x-model="point.channel">
                                <option value="">请选择</option>
                                <option value="AI1">AI1</option>
                                <option value="AI2">AI2</option>
                                <option value="AI3">AI3</option>
                                <option value="AI4">AI4</option>
                                <option value="AI5">AI5</option>
                                <option value="AI6">AI6</option>
                                <option value="AI7">AI7</option>
                                <option value="AI8">AI8</option>
                                <option value="AI9">AI9</option>
                                <option value="AI10">AI10</option>
                                <option value="AI11">AI11</option>
                                <option value="AI12">AI12</option>
                                <option value="AI13">AI13</option>
                                <option value="AI14">AI14</option>
                                <option value="AI15">AI15</option>
                                <option value="AI16">AI16</option>
                            </select>
                        </div>
                    </td>
                    <td>
                        <button type="button" 
                                class="delete-point-btn" 
                                @click="deletePoint('AI', index)"
                                :disabled="point.isFromTemplate">
                            删除
                        </button>
                    </td>
                </tr>
            </template>
            <template x-if="pointsAI.length === 0">
                <tr>
                    <td colspan="8" class="has-text-centered has-text-grey">
                        <span>暂无AI类型的点位配置，请点击'添加'按钮添加点位</span>
                    </td>
                </tr>
            </template>
        </tbody>
    </table>
</div>